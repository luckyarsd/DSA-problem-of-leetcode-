// Wap to sort an array in increasing order using Bubble sort.

# include <iostream>
using namespace std;

int main()
{
    int arr[5] = {7,8,2,1,9};
    for(int i=0 ; i<4 ; i++)
    {
        for(int j=0 ; j<4-i ; j++)
        {
            if(arr[j+1]<arr[j])
                swap(arr[j+1] , arr[j]);
            
        }
    }
    
    
    for (int i=0 ; i<5 ; i++)
    {
        cout<<arr[i]<<" ";
    }
    return 0;
}
